
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/booker"
    tools:context=".MainActivity"
    android:theme="@style/AppTheme.NoActionBar">




    <Button
        android:id="@+id/buildingID"
        android:layout_width="250dp"
        android:layout_height="75dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/imageView"
        android:layout_marginTop="100dp"
        android:background="@drawable/roundedrectangle"
        android:onClick="toBuilding"
        android:text="Building Directions"
        android:textColor="#ffff" />

    <Button
        android:id="@+id/shuttleID"
        android:layout_width="250dp"
        android:layout_height="75dp"
        android:layout_alignEnd="@+id/buildingID"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/buildingID"
        android:layout_below="@+id/buildingID"
        android:layout_marginTop="10dp"
        android:background="@drawable/roundedrectangle"
        android:onClick="toShuttle"
        android:text="Track Daily shuttle"
        android:textColor="#ffff" />

    <Button
        android:id="@+id/reserveID"
        android:layout_width="250dp"
        android:layout_height="75dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/shuttleID"
        android:layout_marginTop="10dp"
        android:background="@drawable/roundedrectangle"
        android:onClick="toReserve"
        android:text="Reserve Weekend Shuttle"
        android:textColor="#ffff" />

    <Button
        android:id="@+id/rideID"
        android:layout_width="250dp"
        android:layout_height="75dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/reserveID"
        android:layout_marginTop="10dp"
        android:background="@drawable/roundedrectangle"
        android:onClick="toRide"
        android:text="Request Ride"
        android:textColor="#ffff" />



</RelativeLayout>
